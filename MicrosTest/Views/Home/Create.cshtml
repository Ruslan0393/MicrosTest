@model CreateUserDto


<div class="container">

    <form enctype="multipart/form-data" asp-controller="home" asp-action="create" method="post" class="mt-3">
        <div class="form-group">
            <label asp-for="Fullname" class="col-sm-2 col-form-label d-block w-100"></label>
            <input asp-for="Fullname" style="position:relative;" class="w-100 form-control  d-block" placeholder="Full name" />
            <span asp-validation-for="Fullname" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email" class="col-sm-2 col-form-label d-block w-100"></label>
            <input asp-for="Email" style="position:relative;" class="w-100 form-control  d-block" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Facebook" class="col-sm-2 col-form-label d-block w-100"></label>
            <input asp-for="Facebook" style="position:relative;" class="w-100 form-control  d-block" placeholder="Facebook" />
            <span asp-validation-for="Facebook" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Twitter" class="col-sm-2 col-form-label d-block w-100"></label>
            <input asp-for="Twitter" style="position:relative;" class="w-100 form-control  d-block" placeholder="Twitter" />
            <span asp-validation-for="Twitter" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Username" class="col-sm-2 col-form-label d-block w-100"></label>
            <input asp-for="Username" style="position:relative;" class="w-100 form-control  d-block" placeholder="Username" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Info" class="col-sm-2 col-form-label"></label>
            <textarea class="form-control" asp-for="Info" style="resize: none;" rows="12"></textarea>
            <span asp-validation-for="Info" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Image" class=" col-sm-2 d-block col-form-label"></label>
            <div class="custom-file">
                <input asp-for="Image" class="form-control d-block custom-file-input" />
                <label class="custom-file-label">Choose File...</label>
            </div>
        </div>
        <div class="form-group d-flex justify-content-end ">
            <button type="submit" id="btn_user" class="btn btn-primary  w-25 ">Add user</button>
        </div>

    </form>

</div>
@section Scripts {

    <script>
    $('.custom-file-input').on("change", function () {
        var fileName = $(this).val().split("\\").pop();
        $(this).next('.custom-file-label').html(fileName);
    });
    </script>

}